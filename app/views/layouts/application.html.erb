<!DOCTYPE html>
<html>
  <head>
    <title>BudgetApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "users", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "groups", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "expenditures", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "splash", "data-turbo-track": "reload" %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <%= javascript_importmap_tags %>
  </head>

  <body>
    
    <% if user_signed_in? %>
      <div class="app_layout_header">Welcome <b><%= current_user.name %></b> | 
        
        <%= button_to "Log out", 
              destroy_user_session_path, 
              method: :delete,
              data: { turbo: false },
              class:'link btn_logout' %>
        <div class="messages">
          <% if notice.to_s != '' %>
            <div class="notice"><%= notice %></div>
          <% end %>
          <% if alert.to_s != '' %>
            <div class="alert"><%= alert %></div>
          <% end %>
        </div>
      </div>
    <% end %>
    </div>
    <%= yield %>
  </body>
</html>
